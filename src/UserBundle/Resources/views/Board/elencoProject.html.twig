{% extends "::dashBase.html.twig" %}

{% block body %}
<div class="right_col" role="main">
  <div class="">

    <div class="page-title">
      <div class="title_left">
        <h3>Progetti</h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Crea Progetto <small>different form elements</small></h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <br />
            <!-- <form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left"> -->
            {{ form_start(form, { 'attr': {'class': 'form-horizontal form-label-left'} })}}
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Nome Progetto <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.nome, { 'attr': {'class': 'form-control', 'placeholder': 'nome'  } })}}
                  <!-- <input type="text" id="first-name" required="required" class="form-control col-md-7 col-xs-12"> -->
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Descrizione <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.descrizione, { 'attr': {'class': 'form-control', 'placeholder': 'descrizione'  } })}}
                  <!-- <input type="text" id="last-name" name="last-name" required="required" class="form-control col-md-7 col-xs-12"> -->
                </div>
              </div>
              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Data di creazione<span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    {{ form_row(form.data, { 'attr': {'class': 'form-control', 'placeholder': 'data'  } })}}
                  <!-- <input id="birthday" class="date-picker form-control col-md-7 col-xs-12" required="required" type="text"> -->
                </div>
              </div>
              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Inserisci Immagine <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                      {{ form_row(form.immagine, { 'attr': {'class': 'form-control', 'placeholder': ''  } })}}
                    <!-- <input type="file" id="insert-image" class="col-md-12 col-xs-12" required="required"> -->
                  </div>
              </div>
              <div class="ln_solid"></div>
              <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                  <!-- <button type="submit" class="btn btn-primary">Cancel</button> -->
                  {{ form_row(form.save, { 'attr': {'class': 'btn btn-primary', 'placeholder': ''  } })}}
                  <!-- <button type="submit" class="btn btn-success">Submit</button> -->
                </div>
              </div>
            {{ form_end(form) }}
            <!-- </form> -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
